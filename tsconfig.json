{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts"
  ]
}
